<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorSecondary">@color/colorSecondary</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
    </style>
    <style name="buttonStyle" parent="AppTheme">
        <item name="android:paddingStart">24dp</item>
    </style>
    <style name="labelStyle" parent="AppTheme">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="cardStyle" parent="AppTheme">
        <item name="android:layout_margin">12dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardBackgroundColor">@color/colorSecondaryDark</item>
    </style>
    <style name="tagStyle" parent="labelStyle">
        <item name="android:layout_margin">12dp</item>
        <item name="android:shadowColor">@color/colorAccent</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>
</resources>
